	<class>com.enchere.models.Marque</class>
	<class>com.enchere.models.Moto</class>
	<class>com.enchere.models.Multimedia</class>
	<class>com.enchere.models.Photo</class>
	<class>com.enchere.models.Terrain</class>
	<class>com.enchere.models.TypeAnnonce</class>
	<class>com.enchere.models.Vehicule</class>
	<class>com.enchere.models.Voiture</class>
	
	<properties>
	<property name="hibernate.hbm2ddl.auto" value="update"/>
